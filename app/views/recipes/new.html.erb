<h1>Add New Recipe</h1>
<%= form_for @recipe do |f| %>
    <%= f.label 'Recipe Title' %>
    <%= f.text_field :title %>
    <br>
    <br>
    <%= f.fields_for :ingredients do |i| %>
        <%= i.label 'Ingredient Name' %>
        <%= i.text_field :name %>
        <br>
        
        <%= i.label :quantity %>
        <%= i.text_field :quantity %>
        <br>
        <br>
    <% end %>
    <br>
    <%= f.submit %>
<% end %>